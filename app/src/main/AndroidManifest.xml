<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 포그라운드 서비스 실행 권한 (Android 9 이상) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- Android 12 이상에서 정확한 알람/스케줄링 관련 권한 (필요할 수 있음) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" /> <!-- Android 14 이상 Foreground Service 유형 명시 필요 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" /> <!-- 예시, 적절한 타입 선택 필요 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- Android 13 이상 알림 권한 -->


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FallDetection"
        tools:targetApi="31">
        <activity
            android:name=".FallConfirmationActivity"
            android:exported="false"
            android:label="@string/title_activity_fall_confirmation"
            android:theme="@style/Theme.FallDetection" />

        <service
            android:name=".FallDetectionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"></service>

        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.FallDetection" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>